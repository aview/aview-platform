			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   creationPolicy="all"
			   backgroundAlpha="0"
			   backgroundColor="#e0effb"
			   initialize="init(event)"
			   minWidth="600"
			   minHeight="279"
			   width="100%"
			   height="100%"
			   preloader="edu.amrita.aview.common.components.preloaderComponent">
