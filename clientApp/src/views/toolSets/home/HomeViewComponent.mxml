<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  width="100%"
		  height="100%">
	<fx:Script>
		<![CDATA[
			
			/**
			 * @public
			 *
			 * To open a link in browser window
			 *
			 * @param moduleName holds the values of module name
			 * @return void
			 */
			public function navigateUrl(moduleName:String):void
			{
				//To hold URL of selected module
				var linkName:String='';
				//Urlrequest object used to open the URL in browser
				var url:URLRequest;
				switch (moduleName)
				{
					//If selected item is "contactUs", open contact details in browser
					case 'contactUs':
					{
						linkName="http://aview.in/contact-us";
						url=new URLRequest(linkName);
						navigateToURL(url, "_blank");
						break;
					}
					//If selected item is "intro", open introduction details in browser
					case 'intro':
					{
						linkName="http://www.youtube.com/v/gIi3b25eKes&hl=en&fs=1&rel=0&autoplay=1";
						url=new URLRequest(linkName);
						navigateToURL(url, "_blank");
						break;
					}
					//If selected item is "howToGuide", open user guide document in browser
					case 'howToGuide':
					{
						linkName="http://www.youtube.com/v/PhCwBJ2i-5k&hl=en&fs=1&rel=0&autoplay=1";
						url=new URLRequest(linkName);
						navigateToURL(url, "_blank");
						break;
					}
					//If selected item is "publicLeacture", open lecture details in browser
					case 'publicLeacture':
					{
						linkName="http://aview.in/upcoming-events";
						url=new URLRequest(linkName);
						navigateToURL(url, "_blank");
						break;
					}
					//If selected item is "latestNews", open latest news details in browser
					case 'latestNews':
					{
						linkName="http://aview.in/news";
						url=new URLRequest(linkName);
						navigateToURL(url, "_blank");
						break;
					}
					//If selected item is "", open contact details in browser
					case 'newFeatures':
					{
						linkName="http://aview.in/a-view-new-features";
						url=new URLRequest(linkName);
						navigateToURL(url, "_blank");
						break;
					}
				}
			}

			/**
			 * @protected
			 *
			 * To change the text color when user roll-over the items
			 *
			 * @param event of MouseEvent
			 * @return void
			 */
			protected function rollOverColorChange(event:MouseEvent):void
			{
				switch (event.target.id)
				{
					//If the selected item is "lblIntroduction", change color of label to grey
					case "lblIntroduction":
					{
						lblIntroduction.setStyle("color", 0x666666);
						break;
					}
					//If the selected item is "ContactUs", change color of label to grey
					case "lblContactUs":
					{
						lblContactUs.setStyle("color", 0x666666);
						break;
					}
					//If the selected item is "HowToGuide", change color of label to grey
					case "lblHowToGuide":
					{
						lblHowToGuide.setStyle("color", 0x666666);
						break;
					}
					//If the selected item is "PublicLeacture", change color of label to grey
					case "lblPublicLeacture":
					{
						lblPublicLeacture.setStyle("color", 0x666666);
						break;
					}
					//If the selected item is "LatestNews", change color of label to grey
					case "lblLatestNews":
					{
						lblLatestNews.setStyle("color", 0x666666);
						break;
					}
					default:
					{
						break;
					}
				}

			}
			/**
			 * @protected
			 *
			 * To change the text color when user roll-out from the items
			 *
			 * @param event of MouseEvent
			 * @return void
			 */
			protected function rollOutColorChange(event:MouseEvent):void
			{
				switch (event.target.id)
				{
					//If the selected item is "lblIntroduction", change color of label to white
					case "lblIntroduction":
					{
						lblIntroduction.setStyle("color", 0xffffff);
						break;
					}
					//If the selected item is "ContactUs", change color of label to white
					case "lblContactUs":
					{
						lblContactUs.setStyle("color", 0xffffff);
						break;
					}
					//If the selected item is "HowToGuide", change color of label to white
					case "lblHowToGuide":
					{
						lblHowToGuide.setStyle("color", 0xffffff);
						break;
					}
					//If the selected item is "PublicLeacture", change color of label to white
					case "lblPublicLeacture":
					{
						lblPublicLeacture.setStyle("color", 0xffffff);
						break;
					}
					//If the selected item is "LatestNews", change color of label to white
					case "lblLatestNews":
					{
						lblLatestNews.setStyle("color", 0xffffff);
						break;
					}
					default:
					{
						break;
					}
				}
			}
		]]>
	</fx:Script>
	<!--AboutUs group component contains introduction and contact details-->
	<s:VGroup id="groupAboutUs"
			  width="100%"
			  height="100%"
			  paddingBottom="10"
			  paddingLeft="10"
			  paddingRight="10"
			  paddingTop="20"
			  gap="5"
			  color="0xFFFFFF"
			  horizontalAlign="center"
			  verticalAlign="middle"
			  fontSize="12"
			  textDecoration="underline">
		<s:HGroup width="100%"
				  height="50%"
				  minHeight="25"
				  verticalAlign="middle"
				  horizontalAlign="center">

			<s:Label id="lblIntroduction"
					 text="Introduction"
					 fontWeight="bold"
					 click="navigateUrl('intro')"
					 rollOver="rollOverColorChange(event)"
					 rollOut="rollOutColorChange(event)"/>
		</s:HGroup>
		<s:HGroup width="100%"
				  height="50%"
				  minHeight="25"
				  verticalAlign="middle"
				  horizontalAlign="center">

			<s:Label id="lblContactUs"
					 text="Contact Us"
					 fontWeight="bold"
					 click="navigateUrl('contactUs')"
					 rollOver="rollOverColorChange(event)"
					 rollOut="rollOutColorChange(event)"/>
		</s:HGroup>
	</s:VGroup>
	<!--Tutorials group component contains user guide-->
	<s:VGroup id="groupTutorials"
			  width="100%"
			  height="100%"
			  paddingBottom="10"
			  paddingLeft="10"
			  paddingRight="10"
			  paddingTop="20"
			  gap="5"
			  color="0xFFFFFF"
			  horizontalAlign="center"
			  verticalAlign="middle"
			  fontSize="12"
			  textDecoration="underline">
		<s:HGroup width="100%"
				  height="100%"
				  minHeight="25"
				  verticalAlign="middle"
				  horizontalAlign="center">

			<s:Label id="lblHowToGuide"
					 text="How to Guide"
					 color="0xffffff"
					 fontWeight="bold"
					 rollOver="rollOverColorChange(event)"
					 rollOut="rollOutColorChange(event)"
					 click="navigateUrl('howToGuide')"/>
		</s:HGroup>

	</s:VGroup>
	<!--Updates group component contains lecture and latest news-->
	<s:VGroup id="groupUpdates"
			  width="100%"
			  height="100%"
			  paddingBottom="10"
			  paddingLeft="10"
			  paddingRight="10"
			  paddingTop="20"
			  gap="5"
			  color="0xFFFFFF"
			  horizontalAlign="center"
			  verticalAlign="middle"
			  fontSize="12"
			  textDecoration="underline">
		<s:HGroup width="100%"
				  height="50%"
				  minHeight="25"
				  verticalAlign="middle"
				  horizontalAlign="center">

			<s:Label id="lblPublicLeacture"
					 text="Public Lectures"
					 fontWeight="bold"
					 click="navigateUrl('publicLeacture')"
					 rollOver="rollOverColorChange(event)"
					 rollOut="rollOutColorChange(event)"/>
		</s:HGroup>
		<s:HGroup width="100%"
				  height="50%"
				  minHeight="25"
				  verticalAlign="middle"
				  horizontalAlign="center">

			<s:Label id="lblLatestNews"
					 text="Latest News"
					 fontWeight="bold"
					 click="navigateUrl('latestNews')"
					 rollOver="rollOverColorChange(event)"
					 rollOut="rollOutColorChange(event)"/>
		</s:HGroup>
	</s:VGroup>
</s:HGroup>
