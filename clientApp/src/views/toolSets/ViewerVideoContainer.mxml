<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 width="100%" 
		 height="100%">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:VGroup width="100%"
			  height="100%"
			  gap="1"
			  id="viewerVideoContainer">
		<s:Group height="100%"
				 width="80%"
				 horizontalCenter="0">
			<s:Rect width="100%"
					height="100%"
					id="sVidBorder"
					left="0">
				<s:fill>
					<s:SolidColor color="#071124"/>
				</s:fill>
			</s:Rect>
		<s:Group height="100%"
					 width="100%"
					 id="pnlViewerVideo"
					 x="{sVidBorder.x}"
					 y="{sVidBorder.y}"
					 horizontalCenter="0">
				<s:VideoDisplay width="100%"
								height="100%"
								id="pnlViewerVideoDisplay"
								y="{sVidBorder.y}"
								x="{sVidBorder.x}"/>
			</s:Group>
		</s:Group>
	</s:VGroup>
</s:Group>
