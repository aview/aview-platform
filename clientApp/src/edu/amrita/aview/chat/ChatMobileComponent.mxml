<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 width="100%"
		 height="100%"
		 creationComplete="onChatCreate(event)">
	
	<fx:Script>
		<![CDATA[
			
			public function enableStyle():void{
				if(this.messageArea.textDisplay!=null){
					setTimeout(changeStyle,10);
				}
			}
			private function changeStyle(event:Event = null):void{
				StyleableTextField(this.messageArea.textDisplay).htmlText = chatMessages;
			}
		]]>
	</fx:Script>
	
	
	<fx:Script source="ChatHandler.as"/>

	<s:Rect width="100%"
			height="100%">
		<s:fill>
			<s:SolidColor color="#071124"/>
		</s:fill>
	</s:Rect>
	<!--Chat container to hold chat message(s)-->
	<s:VGroup id="chatContainer"
			  height="100%"
			  y="0"
			  x="0"
			  horizontalAlign="center"
			  verticalAlign="middle"
			  paddingLeft="3">
		<s:TextArea width="100%"
					height="100%"
					id="messageArea"
					editable="false"
					contentBackgroundColor="#FFFFFF"
					color="#040404"
					borderVisible="false"
					creationComplete="changeStyle(event)"
					updateComplete="messageArea.appendText('');"
					skinClass="spark.skins.mobile.TextAreaSkin"/>
	</s:VGroup>
</s:Group>
