<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" width="100%"
				height="30"  toolTip="{data.contactGroupName+' from '+data.sender.userDisplayName}"
				>
	<s:layout>
		<s:VerticalLayout gap="0" paddingLeft="0" paddingRight="0" verticalAlign="middle" />
	</s:layout>
	<fx:Script>
		<![CDATA[
			import edu.amrita.aview.contacts.events.ContactsTransferEvent;
			
			[Bindable]
			[Embed(source="assets/images/group.png")]
			public var grpIcon:Class;
			
			[Bindable]
			public var grp_user:Class=grpIcon;
			
			
			
			
			protected function btnAccept_clickHandler(event:MouseEvent):void
			{
				this.owner.dispatchEvent(new ContactsTransferEvent(ContactsTransferEvent.ACCEPT_GROUP,data.group));
				
			}
			
			protected function btnReject_clickHandler(event:MouseEvent):void
			{
				
				this.owner.dispatchEvent(new ContactsTransferEvent(ContactsTransferEvent.REJECT_GROUP,data.group));
			}
			
		]]>
	</fx:Script>
	<mx:HBox width="100%" height="100%" paddingLeft="20" verticalAlign="middle">
		<s:Image source="{grp_user}"
				 id="groupIconButton"/>
		<mx:Label id="userLabel" 
				  x="5" y="5"
				  width="125"
				  color="#5C5C5C"
				  verticalCenter="0"
				  text="{data.contactGroupName}"
				  fontSize = "11" 
				  fontWeight="bold"
				  truncateToFit="true" 
				  height="22" 				 
				  enabled="true"/> 
		
		<s:Button id="btnAccept" label="Accept" click="btnAccept_clickHandler(event)" toolTip="accept"/>
		<s:Button id="btnReject" label="Reject" click="btnReject_clickHandler(event)" toolTip="Reject"/>
			
		
	</mx:HBox>
	
	<mx:HRule width="100%" height="1" chromeColor="#dadddf"/>
</s:ItemRenderer>
