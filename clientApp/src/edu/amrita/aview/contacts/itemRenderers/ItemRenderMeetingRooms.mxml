<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx" height="30"
		 width="100%" paddingBottom="0" paddingTop="0" verticalAlign="middle">
	<fx:Script>
		<![CDATA[
			import edu.amrita.aview.meeting.vo.MeetingRoomVO;
			[Bindable]
			[Embed(source="assets/images/roomActive.png")]
			public var grpIcon:Class;
			[Bindable]
			public var grp_user:Class=grpIcon;

			override public function set data(value:Object):void
			{
				super.data=value;
				if (value != null)
				{
					var meetingRoomVO:MeetingRoomVO= value as MeetingRoomVO;
					var roomName:String = meetingRoomVO.meetingRoom.className+" ("+meetingRoomVO.meetingCount+")";
					lblRoomName.text = roomName;
					lblRoomName.toolTip = roomName;
					
				}
			}

		]]>
	</fx:Script>
		<mx:HBox width="100%" height="100%" paddingLeft="10" paddingRight="10" paddingTop="3"
				 verticalAlign="middle">
		<s:Image source="{grp_user}"/>
		<s:Label id="lblRoomName" width="100%" color="#636363" fontWeight="bold" maxDisplayedLines="1"
				 text=""/>
	</mx:HBox>
	<mx:HRule width="100%" height="1" chromeColor="#dadddf"
			  />
</mx:VBox>
