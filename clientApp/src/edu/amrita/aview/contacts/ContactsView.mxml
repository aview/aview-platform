<!-- Group to co-ordinate and align all the components-->
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%"
		 height="100%"
		xmlns:checkBox="edu.amrita.aview.common.components.checkBox.*" 
		xmlns:meeting="edu.amrita.aview.meeting.*">
	<fx:Script source="ContactsViewHandler.as">
		
	</fx:Script>

	<!-- Script to include handler -->
	<!--<fx:Script source="ContactsViewHandler.as"/>-->

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<fx:XML format="e4x"
				id="myMenuData">
			<menuitem label="Edit"
					  type="check"
					  enabled="true"
					  toggled="false">
			</menuitem>
		</fx:XML>
		<fx:XML format="e4x"
				id="myMenu">
			<menuitem label="Delete"
					  type="check"
					  enabled="true"
					  toggled="false">
			</menuitem>
		</fx:XML>

	</fx:Declarations>
	<!--SkinnableContainer  to set backgroundColor and add all the components to this-->
	
		
		<mx:HBox id="contactListGroup"
				 height="100%" width="345">
			<mx:VBox width="100%"
					 height="100%"
					 verticalGap="0">
				<mx:Canvas width="100%"
						   height="100%"
						   backgroundColor="#DEE2E3">
					
					<mx:ViewStack id="vskLeftTabBar"
								  left="0"
								  top="35"
								  width="100%"
								  height="100%">
						<s:NavigatorContent id="meetingRoomsListNavigator"
											width="100%"
											height="100%"											
											label="          Meeting Rooms"
											backgroundColor="#FFFFFF">
							
						</s:NavigatorContent>
						
						<s:NavigatorContent id="groupsListNavigator"
											width="100%"
											height="100%"
											label="          My Contacts"
											backgroundColor="#FFFFFF">
							
						</s:NavigatorContent>
						
					</mx:ViewStack>
					<s:BorderContainer width="345" borderVisible="false" height="37">
						
						<s:Rect  width="100%" height="100%">
							<s:fill>
								<s:BitmapFill source="@Embed('/edu/amrita/aview/common/assets/images/tabBg.jpg')" fillMode="repeat"/>
							</s:fill>
						</s:Rect>
						
						<s:BorderContainer x="1" y="0" width="171" height="37" id="meetingTab" borderVisible="false"
										   useHandCursor="true" buttonMode="true"
										   click="{vskLeftTabBar.selectedIndex=0;getBackground(vskLeftTabBar.selectedIndex);leftTabBar_clickHandler()}"
										   backgroundImage="{activeTab}">
							
							<s:Image horizontalCenter="-48"
									 source="{setImageForRoom(vskLeftTabBar.selectedIndex)}"
									 verticalCenter="0"/>
							<s:Label x="54" y="15"
									 fontWeight="bold" color="{getFontColorForMeeting(vskLeftTabBar.selectedIndex)}" text="Meeting Rooms"/>
						</s:BorderContainer>
						<s:BorderContainer x="172" y="0" width="171" id="contactTab" height="37" borderVisible="false"
										   useHandCursor="true" buttonMode="true"
										   click="{vskLeftTabBar.selectedIndex=1;getBackground(vskLeftTabBar.selectedIndex);leftTabBar_clickHandler()}"
										   backgroundImage="{inactiveTab}">
							
							<s:Image horizontalCenter="-40"
									 source="{setImageForContacts(vskLeftTabBar.selectedIndex)}"
									 verticalCenter="0"/>
							<s:Label x="61" y="16"
									 color="{getFontColorForContacts(vskLeftTabBar.selectedIndex)}"
									 fontWeight="bold" text="My Contacts"/>
						</s:BorderContainer>
						
					</s:BorderContainer>
					
				</mx:Canvas>
				
			</mx:VBox>
		</mx:HBox>
		<s:BorderContainer id="meetingRoomViewContainer"
						   width="100%"
						   height="100%"
						   backgroundColor="#ffffff">
			<s:layout>
				<s:VerticalLayout gap="0"/>
			</s:layout>
			<mx:HRule width="100%"
					  height="1"
					  chromeColor="#CAD5DB"/>
			
		</s:BorderContainer>

</s:HGroup>