<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml"
		 dataChange="changeICon();"
		 verticalAlign="middle"
		 horizontalScrollPolicy="off">
	<mx:Script source="UserNameRendererHandler.as"/>
	<mx:Image source="{icon_source}"
			  width="32"
			  height="32"/>
	<mx:VBox width="100%"
			 height="100%"
			 verticalGap="0"
			 verticalScrollPolicy="off"
			 horizontalScrollPolicy="off"
			 verticalAlign="middle">
		<mx:Label htmlText="{displayName}"
				  fontSize="11"
				  truncateToFit="true"
				  width="100%"
				  toolTip="{tooltipText}"
				  enabled="false"
				  disabledColor="#000000"/>
		<mx:Label htmlText="{instituteName}"
				  fontSize="9"
				  truncateToFit="true"
				  width="100%"
				  toolTip="{tooltipText}"
				  enabled="false"
				  disabledColor="#000000"/>
	</mx:VBox>
</mx:HBox>
