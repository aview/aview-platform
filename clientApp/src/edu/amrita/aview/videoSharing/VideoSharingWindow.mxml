<s:Window xmlns:mx="library://ns.adobe.com/flex/mx"
				   xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   systemChrome="standard"
				   type="normal"
				   close="closeVideoSharingWindow()"
				   backgroundColor="#FFFFFF"
				   windowActivate="mWwindowActivateHandler(event)"
				   skinClass="edu.amrita.aview.common.skins.CustomWindowSkin"
				   creationComplete="initWindow()"
				   status="{FlexGlobals.topLevelApplication.mainApp.COPY_RIGHT_FOOTER}"
				   resize="resizePlayer()"
				   minHeight="680"
				   minWidth="920">

<!-- hBoxVideo-->
	
	<mx:HBox id="hBoxVideo"
			 x="0"
			 y="0"
			 height="100%"
			 top="0"
			 backgroundColor="#ffffff"/>
	<!-- copyright display hbox-->
	<mx:HBox x="0" bottom="0" visible="false" width="100%" height="20" backgroundColor="#e0effb" color="#FFFFFF"
			 verticalAlign="middle">
		<!-- copyright label-->
		<s:Label bottom="0"
				 width="100%"
				 horizontalCenter="0"
				 fontSize="10" color="#FFFFFF"
				 text="{Constants.COPY_RIGHT_FOOTER}"/>
	</mx:HBox>
	<fx:Script source="VideoSharingWindowScript.as">
	</fx:Script>

</s:Window>

