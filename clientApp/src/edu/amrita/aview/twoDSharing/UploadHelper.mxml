<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 height="0"
		 width="0">
	<fx:Metadata>
		[Event(type="edu.amrita.aview.twoDSharing.V2DEvent",name="SuppportedFile")]
	</fx:Metadata>
	<fx:Script source="UploadHelperHandler.as"/>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:MovieClipSWFLoader id="swfLoad"
						  visible="false"
						  complete="swCompleteHandler(event)"
						  ioError="swfLoad_ioErrorHandler(event)"/>
</s:Group>
