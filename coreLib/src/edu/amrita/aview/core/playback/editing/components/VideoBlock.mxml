<!-- Canvas for creating the Video Block -->
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml"
		   borderStyle="solid" cornerRadius="2" horizontalScrollPolicy="off" mouseChildren="false"
		   styleName="normalVideoBlock" textAlign="center" verticalCenter="0">
	<!-- Displaying video name -->
	<mx:Label horizontalCenter="0" text="{videoDisplayName}" verticalCenter="0"/>
	<!-- Script to include handler -->
	<mx:Script source="../scripts/VideoBlockScript.as"/>
</mx:Canvas>
