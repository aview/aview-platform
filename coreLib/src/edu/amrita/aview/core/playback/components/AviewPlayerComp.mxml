<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml"
		   width="100%" height="100%" backgroundColor="#E0EFFB" creationComplete="init()"
		   resize="playerResizeHandler(event)">
<mx:Script source="AviewPlayerCompAs.as"/>
<!--<mx:Script source="DocPointerPlayer.as"/>
<mx:Script source="PttPlayer.as"/>	-->
	<mx:Canvas x="0" y="0" width="100%" height="98%" id="mainCan" verticalScrollPolicy="off" horizontalScrollPolicy="off" >
		
			<mx:Canvas id="can_top" width="100%" height="90%" backgroundColor="#E0EFFB">
				
				<mx:Canvas height="{can_top.height}" width="30%" y="0" id="can_videos" backgroundColor="#ffffff">
					
					<mx:VBox height="100%" width="100%" id="vidCan" verticalScrollPolicy="off" paddingBottom="10" paddingLeft="30" paddingRight="10" paddingTop="30" >
						<!--Fix for issue #17071: Added resize event parameter-->
						<mx:Canvas width="100%" height="33%"  id="presenter" resize="presenterResize(event)"
								   chromeColor="#8AC4FF">
							<mx:Label x="100" y="100" text="Full Screen Mode is Activate" visible="false" id="prstlbl" />			
						</mx:Canvas >
						
						<mx:Canvas width="100%" height="33%" id="viewer" resize="viewerResize()"
								   chromeColor="#8AC4FF">
							<mx:Label x="100" y="100" text="Full Screen Mode is Activate" visible="false" id="viwrlbl" />	
						</mx:Canvas>
						
						<mx:Canvas width="100%" height="33%" id="chat" resize="chatResize()">
							<mx:Label x="100" y="100" text="Full Screen Mode is Activate" visible="false" id="chatlbl"/>	
						</mx:Canvas>	
								
					</mx:VBox>
				</mx:Canvas>	
				
				<mx:Canvas x="{can_videos.width}" y="0" height="{can_top.height}" width="100%" id="can_panel">
						
					<mx:Panel id="cont" width="100%" height="97%" backgroundColor="#E0EFFB"
							  paddingBottom="10" paddingLeft="10" paddingRight="10" paddingTop="10"
							  title="{lectureTitle}">    
					        <mx:HBox id="buttonContainer" chromeColor="#8AC4FF" >       
						        <mx:Button id="pvdoBtn" width="130" height="39" label="PRESENTER"
										   click="addPopupWndw(event)" enabled="false"
										   icon="@Embed('/edu/amrita/aview/core/playback/assets/images/video-file.png')"
										   toolTip="Presenter Video"/> 
						        <mx:Button id="vvdoBtn" width="120" height="39" label="VIEWER"
										   click="addPopupWndw(event)" enabled="false"
										   icon="@Embed('/edu/amrita/aview/core/playback/assets/images/video-file.png')"
										   toolTip="Viewer Video"/> 
						        <mx:Button id="chatBtn" width="120" height="39" label="CHAT"
										   click="addPopupWndw(event)" enabled="false"
										   icon="@Embed('/edu/amrita/aview/core/playback/assets/images/chat.png')"
										   toolTip="Chat"/> 
						        <mx:Button id="slideBtn" width="120" height="39" label="SLIDES"
										   click="addSlideWndw()" enabled="false"
										   icon="@Embed('/edu/amrita/aview/core/playback/assets/images/Slides.png')"
										   toolTip="Slides"/>
					         </mx:HBox>
					        <mx:TabNavigator id="tn" y="{pvdoBtn.y+pvdoBtn.height}" chromeColor="#8AC4FF" width="100%" height="100%" creationPolicy="all">  				
					            <mx:VBox id="documentTab" label="Document">
					            </mx:VBox>
					
					            <mx:Canvas label="WhiteBoard"
										   verticalScrollPolicy="off">
									
					                <mx:Canvas  width="100%" height="100%" id="wbCan"  resize="onResizeWb(event)" creationComplete="createWbComp()">
					                	
					                </mx:Canvas>	
									<mx:Image id="pageNoImage"
											  left="0"	
											  top="2" 
											  source="@Embed(source='/edu/amrita/aview/core/playback/assets/images/pageNo.png')"/>
									<mx:Text id="pageNo" top="0" left="0" text="Page No : "/>
					            </mx:Canvas>            
					        </mx:TabNavigator>       
				    
				    </mx:Panel>
			    
			    </mx:Canvas>
			</mx:Canvas>
			
				<mx:Canvas bottom="0" width="100%" height="11%" id="can_bottom">
					
					<mx:HBox width="100%" x="0" verticalScrollPolicy="off" id="seekBarContainer" >
					<mx:HSlider width="98%" minimum="0" chromeColor="#e0effb" id="seekBar" dataTipFormatFunction="seekBarValue"/>	    
					</mx:HBox>
					<!--<mx:Label id="centralTimeLabel" text="{timeVariable.toString()}"  y="10" />-->
					<mx:Label id="centralTimeLabel" y="{seekBar.y+seekBar.height+2}"/>
					<mx:Button id="playpauseButton" x="{(seekBar.width/2)-playpauseButton.width-10}"
							   y="{seekBar.y+seekBar.height+2}" width="60" label="Pause" enabled="false"
							   chromeColor="#E0EFFB" click="playPausePlayer()" cornerRadius="3"/>
					<mx:Button id="stopButton" x="{(seekBar.width/2)+10}"
							   y="{seekBar.y+seekBar.height+2}" width="60" label="Stop" enabled="false"
							   chromeColor="#E0EFFB" click="stopPalayBack()" cornerRadius="3"/>
					<mx:Button id="closeWndowButton" x="{stopButton.x+stopButton.width+20}"
							   y="{seekBar.y+seekBar.height+2}" width="60" label="Cancel"
							   chromeColor="#E0EFFB" click="closePlayback()" cornerRadius="3"/>
					<mx:Label id="endTimeLabel" x="{seekBar.x+seekBar.width-endTimeLabel.width-3}" y="{seekBar.y+seekBar.height+2}"/>
				</mx:Canvas>
		<mx:SWFLoader horizontalCenter="0" verticalCenter="0" id="playBackBufferingMessageComp" width="200" height="200"/>
	</mx:Canvas>
	
</mx:Canvas>
