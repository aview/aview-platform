<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" minWidth="75" minHeight="75">

	<mx:Image id="img_close" visible="true" x="0" y="0" width="15" height="15"
			  source="@Embed(source='assets/images/close.gif')" toolTip="Cancel"/>
	<mx:Image id="img_select" visible="true" x="0" y="{this.height-15}" width="15" height="15"
			  source="@Embed(source='assets/images/selection.gif')" toolTip="Drag"/>
	<mx:Image id="img_ok" visible="true" x="{this.width-24}" y="0" width="24" height="15"
			  source="@Embed(source='assets/images/ok.png')" toolTip="Done"/>
	<mx:Image id="img_rz" visible="true" x="{this.width-15}" y="{this.height-15}" width="15"
			  height="15" source="@Embed(source='assets/images/resize_handle.gif')" toolTip="Resize"/>
	<mx:TextArea id="_txt" x="15" y="15" width="{this.width-30}" height="{this.height-30}"
				 borderColor="#0D9BFF" color="#000000" contentBackgroundAlpha="0"
				 fontFamily="Times New Roman" fontSize="12"/>

</mx:Canvas>
