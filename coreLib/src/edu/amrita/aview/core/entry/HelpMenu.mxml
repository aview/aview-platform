					   rollOverColor="#CEDBEF" textAlign="left"/>
		</s:VGroup>
		<mx:HRule width="100%" height="1" chromeColor="#96A0A9"/>
		<s:VGroup width="100%" height="30" verticalAlign="middle">
			<mx:LinkButton width="100%" height="100%" label="Feedback Form"
						   click="FlexGlobals.topLevelApplication.mainApp.mainContainerComp.showFeedbackForm()"
						   color="#292A2B" fontSize="12" paddingLeft="5" paddingRight="5"
						   rollOverColor="#CEDBEF" textAlign="left"/>
		</s:VGroup>
		<mx:HRule width="100%" height="1" chromeColor="#96A0A9"/>
		<s:VGroup width="100%" height="30" verticalAlign="middle">
			<mx:LinkButton width="100%" height="100%" label="AVIEW Releasenote"
						   click="navigateurl('releasenote')" color="#292A2B" enabled="true"
						   fontSize="12" paddingLeft="5" paddingRight="5" rollOverColor="#CEDBEF"
