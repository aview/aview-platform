<components:InsidePanel xmlns:fx="http://ns.adobe.com/mxml/2009"
						 xmlns:mx="library://ns.adobe.com/flex/mx"
						 xmlns:components="edu.amrita.aview.core.shared.components.*"
						 xmlns:components1="edu.amrita.aview.core.shared.components.*"
						 xmlns:autoComplete="edu.amrita.aview.core.shared.components.autoComplete.*"
						 xmlns:s="library://ns.adobe.com/flex/spark"
						 width="350"
						 height="280"
						 backgroundColor="#e0effb"
						 borderVisible="true"
						 color="#0653B3"
						 dropShadowVisible="false"
						 fontSize="15"
						 fontWeight="bold"
						 textAlign="center"
						 title="Change Password">

	<!-- Script to include handler -->
	<fx:Script source="ChangePasswordCompUIHandler.as"/>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<!-- Conatiner -->
	<mx:Canvas x="4"
			   y="3"
			   width="98%"
			   height="97%"
			   borderColor="#A3D7FF"
			   borderStyle="solid"
			   borderVisible="true"
			   chromeColor="#CCCCCC"
			   fontFamily="Arial"
			   fontSize="12"
			   fontWeight="normal"
			   textAlign="left">
		<!--label for Username-->
		<s:Label id="lblUserName"
				 left="170"
				 top="20"
				 width="160"
				 fontSize="12"/>
		<!-- Label to show user name -->
		<s:Label left="20"
				 top="20"
				 width="113.5"
				 text="User Name :"/>
		<!--label to show Current Password -->
		<s:Label left="20"
				 top="60"
				 text="Current Password : "/>
		<!--Text to enter OldPassword -->
		<s:TextInput id="txtInpOldPassword"
					 left="170"
					 top="60"
					 width="160"
					 height="25"
					 displayAsPassword="true"
					 editable="true"
					 skinClass="edu.amrita.aview.core.shared.skins.CustomTextInputSkin"/>
		<!--Label for New passowrd-->
		<s:Label id="lblNewPwd"
				 visible="true"
				 left="20"
				 top="100"
				 text="New Password : "/>
		<!--Text to enter new passowrd-->
		<s:TextInput id="txtInpNewPwd"
					 visible="true"
					 left="170"
					 top="100"
					 width="160"
					 height="25"
					 displayAsPassword="true"
					 editable="true"
					 enabled="true"
					 skinClass="edu.amrita.aview.core.shared.skins.CustomTextInputSkin"/>
		<!--Label to show confirm password-->
		<s:Label id="lblRetypePwd"
				 visible="true"
				 left="20"
				 top="140"
				 text="Confirm Password : "/>
		<!-- Text to enter confirm password-->
		<s:TextInput id="txtInpConfirmPwd"
					 visible="true"
					 left="170"
					 top="140"
					 width="160"
					 height="25"
					 displayAsPassword="true"
					 skinClass="edu.amrita.aview.core.shared.skins.CustomTextInputSkin"/>
		<!-- Ok button -->
		<components:ImageButton id="btnOK"
				  visible="true"
				  bottom="20"
				  width="80"
				  label="Save"
				  chromeColor="#E0EFFB"
				  click="setNewPassword()"
				  color="#000000"
				  cornerRadius="2"
				  horizontalCenter="-60"/>
		<!-- Save button -->
		<components:ImageButton id="btnSave"
				  visible="true"
				  bottom="20"
				  width="80"
				  label="Cancel"
				  chromeColor="#E0EFFB"
				  click="closeChangePasswordComp()"
				  color="#000000"
				  cornerRadius="2"
				  horizontalCenter="60"/>
		<!-- Label to show * -->
		<s:Label left="12"
				 top="60"
				 width="14"
				 height="17"
				 color="#F42F0E"
				 text="*"/>
		<!-- Label to show * -->
		<s:Label left="12"
				 top="100"
				 width="14"
				 height="17"
				 color="#F42F0E"
				 text="*"/>
		<!-- Label to show * -->
		<s:Label left="12"
				 top="140"
				 width="14"
				 height="17"
				 color="#F42F0E"
				 text="*"/>
	</mx:Canvas>
	<!-- Icon to close change password component-->
	<components:WindowCloseImage right="5"
			 top="-25"
			 id="imgClose"
			 click="closeChangePasswordComp()"/>
</components:InsidePanel>
