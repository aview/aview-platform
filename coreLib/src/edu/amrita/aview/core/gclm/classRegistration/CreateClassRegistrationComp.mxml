		<!-- label to show course name -->
		<s:Label left="20"
				 top="45"
				 fontFamily="Arial"
				 fontSize="12"
				 fontWeight="normal"
				 paddingLeft="0"
				 text="Course Name : "/>
		<!-- label to show course name -->
		<s:Label id="lblCourseName"
				 left="143"
				 top="43"
				 width="200"
				 height="25"
				 fontFamily="Arial"
				 fontSize="12"
				 fontWeight="normal"
				 paddingLeft="0"
				 paddingTop="2"/>
		<!-- label to show institute name -->
		<s:Label left="20"
				 top="80"
				 fontFamily="Arial"
				 fontSize="12"
				 fontWeight="normal"
				 paddingLeft="0"
				 text="Institute Name : "/>
		<!-- label to show institute name -->
		<s:Label id="lblInstituteName"
				 left="143"
				 top="78"
				 width="400"
				 height="25"
				 fontFamily="Arial"
				 fontSize="12"
				 fontWeight="normal"
				 paddingLeft="0"
				 paddingTop="2"/>
		<!-- label to show * -->
		<s:Label left="10"
				 top="115"
				 color="#ED3814"
				 fontFamily="Times New Roman"
				 fontSize="13"
				 fontWeight="bold"
				 text="*"/>
		<!-- label to show user name -->
		<s:Label left="20"
				 top="115"
				 fontFamily="Arial"
				 fontSize="12"
				 fontWeight="normal"
				 paddingLeft="0"
				 text="User Name : "/>
		<!-- label to show user details -->
		<s:Label left="20"
				 top="150"
				 fontFamily="Arial"
				 fontSize="12"
				 fontWeight="normal"
				 paddingLeft="0"
