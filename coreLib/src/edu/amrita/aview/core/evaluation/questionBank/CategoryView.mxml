<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml"
		 width="100%"
		 height="100%"
		 backgroundColor="#e0effb"
		 xmlns:s="library://ns.adobe.com/flex/spark">
	<!-- Date formatter-->
	<mx:DateFormatter id="dateFormatter"
					  formatString="DD MMM YYYY H:N:S"/>
	<!-- Script to include handler -->
	<mx:Script source="CategoryViewUIHandler.as"/>
	<!--label to show category name-->
	<s:Label id="categoryName" color="#000000" fontFamily="Arial" fontSize="15" fontWeight="bold"
			 paddingLeft="10" paddingTop="5"
			 text="{'Category Name: '+categoryVO.qbCategoryName} (Total {categoryVO.totalQuestions} Questions)"/>
	<!--Datagrid to show category id-->
	<s:DataGrid width="100%" height="100%" chromeColor="#E0EFFB" color="#000000"
				dataProvider="{subCategories}" focusEnabled="false" fontFamily="Arial"
				textAlign="left" variableRowHeight="true">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn minWidth="200"
							  dataField="qbSubcategoryName"
							  headerText="Subcategory"
							  sortCompareFunction="{AViewStringUtil.caselessSortForField('qbSubcategoryName')}"/>
				<s:GridColumn minWidth="150"
							  dataField="createdByUserName"
							  headerText="Created By"/>
				<s:GridColumn minWidth="150"
							  dataField="createdDate"
							  headerText="Created Date"
							  labelFunction="formatCreatedDate"/>
				<s:GridColumn minWidth="150"
							  dataField="modifiedByUserName"
							  headerText="Modified By"/>
				<s:GridColumn minWidth="150"
							  dataField="modifiedDate"
							  headerText="Modified Date"
							  labelFunction="formatModifiedDate"/>
				<s:GridColumn minWidth="150"
							  dataField="totalQns"
							  headerText="No. of Questions"/>
			</s:ArrayList>
		</s:columns>
	</s:DataGrid>

</mx:VBox>
